<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/wxdj"
            android:layout_width="wrap_content"
            android:text="【 维修登记 】"
            android:background="@null"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/wxys"
            android:layout_width="wrap_content"
            android:text="【 维修验收 】"
            android:background="@null"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bjly"
            android:layout_width="wrap_content"
            android:text="【 备件领用 】"
            android:background="@null"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/fjrk"
            android:layout_width="wrap_content"
            android:text="【 废件入库申请 】"
            android:background="@null"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/wxfy"
            android:layout_width="wrap_content"
            android:text="【 维修费用结算 】"
            android:background="@null"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>